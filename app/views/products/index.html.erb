<p id="notice"><%= notice %></p>

<h1 class="text-center">Listing Products</h1>

<table class="item-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Color</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% cache(cache_key_for_products) do %>
      <% @products.each do |p| %>
        <% cache(p) do %>
          <%= render partial: 'product', object: p %>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>


<%= link_to 'New Product', new_product_path %>


